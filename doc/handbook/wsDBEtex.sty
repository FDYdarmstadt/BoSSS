        \lstinputlisting[basicstyle=\footnotesize\ttfamily\color{magenta}, 
                         breaklines=true, 
                         breakatwhitespace=true]         % sets if automatic breaks should only happen at whitespace
  {\BoSSSoutName}
    } {
        { \tt \textcolor{red}{
        Missing output file `\BoSSSoutName'.
        } } 
    }
}
